<div class="table-responsive-md">
    <table class="table table-striped table-hover table-dark">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Title</th>
                <th scope="col">Description</th>
            </tr>
        </thead>
        <tbody>
        {{#each partials.notesListContext.notes}}
            <tr>
                <th scope="row" class="count"></th>
                <td>{{title}}</td>
                <td>{{description}}</td>
                <td>
                    <a href="/notes/delete/{{id}}" class="btn btn-dark" tabindex="-1" role="button" aria-disabled="true">Delete</a>
                </td>
            </tr>
        {{else}}
            <tr>
                <td class="text-center" colspan="5">No notes</td>
            </tr>
        {{/each}}
        </tbody>
    </table>
</div>
